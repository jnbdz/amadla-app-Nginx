{% for server in servers -%}
    {% if server.tls != true %}
        server {
            listen       {{ server.port }};
            listen       somename:8080;
            server_name  somename  alias  another.alias;

            location {{ server.location }} {
                root   html;
                index  index.html index.htm;
            }
        }
    {% else %}
        server {
            listen       {{ server.port }} ssl; # 443
            server_name  {{ server.server_name }};

            ssl_certificate      {{ server.ssl_cert_pem }}; # cert.pem;
            ssl_certificate_key  {{ server.ssl_cert_key }}; # cert.key;

            ssl_session_cache    shared:SSL:{{ server.ssl_session_cache_time }}; #1m;
            ssl_session_timeout  {{ server.ssl_session_timeout }} #5m;

            ssl_ciphers  HIGH:!aNULL:!MD5;
            ssl_prefer_server_ciphers  on;

            {% if server.[].errors %}
                {% for error in server.[].errors -%}
                    error_page  {{ error.number }}              {{ error.path }} #/404.html;
                {%- endfor %}
            {% endif %}

            location {{ server.location }} {
                root   html;
                index  index.html index.htm;
            }
        }
    {% endif %}
{%- endfor %}